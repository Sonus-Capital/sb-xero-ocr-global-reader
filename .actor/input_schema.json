{
  "type": "object",
  "properties": {
    "version": {
      "title": "Config version",
      "type": "string",
      "default": "SB_Attach_Master_v1"
    },
    "Year": {
      "title": "Year",
      "type": "integer",
      "minimum": 2010,
      "maximum": 2030
    },
    "LedgerUrl": {
      "title": "Ledger CSV URL",
      "type": "string",
      "format": "uri"
    },
    "InvoiceUrl": {
      "title": "Invoice CSV URL",
      "type": "string",
      "format": "uri"
    },
    "ManifestUrl": {
      "title": "Attachment manifest CSV URL",
      "type": "string",
      "format": "uri"
    },
    "likelyTrackingHorse": {
      "title": "Likely tracking horse?",
      "type": "boolean",
      "description": "If true, treat this year as a likely horse-tracking year.",
      "default": false
    }
  },
  "required": ["Year", "LedgerUrl", "InvoiceUrl", "ManifestUrl"],
  "additionalProperties": false
}
